# Azure OpenAI Configuration
# Get your credentials from Azure Portal: https://portal.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_MODEL_NAME=gpt-4o-mini

# Azure AI Search (optional for enhanced capabilities)
AZURE_SEARCH_SERVICE_NAME=your-search-service
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=recipes

# Application Settings
DEBUG=true
LOG_LEVEL=info
AI_PROVIDER=azure

# Cache Settings
CACHE_TTL=3600
CACHE_ENABLED=true

# Store API Keys (for real integrations)
COLES_API_KEY=your_coles_api_key
WOOLWORTHS_API_KEY=your_woolworths_api_key
ALDI_API_KEY=your_aldi_api_key

# Database (optional)
DATABASE_URL=sqlite:///./recipes.db